.row
  .col-md-3
  .col-md-6
    %h3{:style => "text-align: center"}
      = 'Поменяй свой пароль'
    %br/
    = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
      = f.error_notification
      = f.input :reset_password_token, as: :hidden
      = f.full_error :reset_password_token
      .form-group
        = f.input :password, input_html: { class: 'form-control' }, label: false, required: false, autofocus: true, placeholder: 'Новый пароль', hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length)
      .form-group
        = f.input :password_confirmation, input_html: { class: 'form-control' }, label: "Подтверди пароль", required: true
      .form-group
        = f.button :submit, :class => 'btn btn-primary btn-lg btn-block', value: 'Поменять пароль'
      = render "devise/shared/links"
  .col-md-3


