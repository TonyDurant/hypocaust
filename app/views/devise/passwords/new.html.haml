.row
  .col-md-3
  .col-md-6
    %h3{:style => "text-align: center"}
      = 'Забыл пароль? Не беда!'
    %br/
    = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
      = f.error_notification
      .form-group
        = f.input :email, input_html: { class: 'form-control' }, label: false, required: false, autofocus: true, placeholder: 'Имейл'
      .form-group
        = f.button :submit, :class => 'btn btn-primary btn-lg btn-block', value: 'Выслать инструкции по восстановлению'
      = render "devise/shared/links"
  .col-md-3

