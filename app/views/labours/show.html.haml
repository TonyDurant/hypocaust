- model_class = Labour
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @labour.name
%p
  %strong= model_class.human_attribute_name(:product_id) + ':'
  %br
  = @labour.product_id
%p
  %strong= model_class.human_attribute_name(:system_id) + ':'
  %br
  = @labour.system_id
%p
  %strong= model_class.human_attribute_name(:unit) + ':'
  %br
  = @labour.unit
%p
  %strong= model_class.human_attribute_name(:price) + ':'
  %br
  = @labour.price
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @labour.description
%p
  %strong= model_class.human_attribute_name(:service_id) + ':'
  %br
  = @labour.service_id
%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @labour.user_id
%p
  %strong= model_class.human_attribute_name(:currency) + ':'
  %br
  = @labour.currency


= link_to t('.back', :default => t("helpers.links.back")), labours_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_labour_path(@labour), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), labour_path(@labour), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
